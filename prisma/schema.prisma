// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  PATIENT
  DOCTOR
  ADMIN
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
  REJECTED
}

enum AppointmentType {
  ONLINE
  OFFLINE
}

enum TimeSlotStatus {
  AVAILABLE
  BOOKED
  CANCELLED
}

enum MetricType {
  WEIGHT
  HEIGHT
  BMI
  BLOOD_PRESSURE_SYSTOLIC
  BLOOD_PRESSURE_DIASTOLIC
  HEART_RATE
  TEMPERATURE
  OXYGEN_SATURATION
  BLOOD_GLUCOSE_FASTING
  BLOOD_GLUCOSE_RANDOM
  HBA1C
  CHOLESTEROL_TOTAL
  CHOLESTEROL_LDL
  CHOLESTEROL_HDL
  TRIGLYCERIDES
  RESPIRATORY_RATE
  BLOOD_GLUCOSE_POST_MEAL
}

model User {
  id             String   @id @default(uuid())
  name           String
  email          String   @unique
  profilePicture String?
  password       String
  role           Role     @default(PATIENT)
  refreshToken   String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  deletedAt      DateTime?
  
  // Email verification fields
  isEmailVerified           Boolean   @default(false)
  emailVerificationToken    String?
  tokenExpiresAt            DateTime?
  lastVerificationEmailSent DateTime?
  
  // Password reset fields
  passwordResetToken  String?
  passwordResetExpiry DateTime?
  
  // Token versioning for session management
  tokenVersion Int @default(0)

  // Relations
  patient          Patient?       @relation("PatientUser")
  doctor           Doctor?        @relation("DoctorUser")
  admin            Admin?         @relation("AdminUser")
  sentMessages     ChatMessage[]  @relation("SentMessages")
  receivedMessages ChatMessage[]  @relation("ReceivedMessages")
  rooms            Room[]         @relation("RoomMembers")
  adminRooms       Room[]         @relation("RoomAdmin")
  aiChats          AiChat[]       @relation("UserAiChats")
  notifications    Notification[] @relation("UserNotifications")
  recordedMetrics  PatientHealthMetric[]
  roomId           String?
}

model Patient {
  id             String           @id @default(uuid())
  userId         String           @unique
  location       String?
  medicalHistory String?
  symptoms       Symptom[]
  appointments   Appointment[]    @relation("PatientAppointments")
  reviews        Review[]
  prescriptions  Prescription[]
  PatientHistory PatientHistory[]
  reports        Report[]
  healthMetrics  PatientHealthMetric[]

  user User @relation("PatientUser", fields: [userId], references: [id])
}

model Doctor {
  id                     String                   @id @default(uuid())
  userId                 String                   @unique
  specialty              String
  clinicLocation         String
  experience             String?                  @default("0")
  education              String?
  bio                    String?
  languages              String[]
  isVerified             Boolean                  @default(false)
  averageRating          Float                    @default(0)
  totalReviews           Int                      @default(0)
  appointments           Appointment[]            @relation("DoctorAppointments")
  reviews                Review[]
  prescriptions          Prescription[]
  patientHistory         PatientHistory[]
  timeSlots              TimeSlot[]
  blockedDates           BlockedDate[]
  prescriptionTemplates  PrescriptionTemplate[]

  user User @relation("DoctorUser", fields: [userId], references: [id])
}

model Admin {
  id          String @id @default(uuid())
  userId      String @unique
  permissions Json?

  user User @relation("AdminUser", fields: [userId], references: [id])
}

model Appointment {
  id              String            @id @default(uuid())
  patientId       String
  doctorId        String
  timeSlotId      String?
  date            DateTime
  time            String
  appointmentType AppointmentType   @default(OFFLINE)
  status          AppointmentStatus @default(PENDING)
  consultationFee Int?              @default(0)
  notes           String?
  reminderSent    Boolean           @default(false)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  prescriptionId  String?

  patient      Patient        @relation("PatientAppointments", fields: [patientId], references: [id])
  doctor       Doctor         @relation("DoctorAppointments", fields: [doctorId], references: [id])
  timeSlot     TimeSlot?      @relation(fields: [timeSlotId], references: [id])
  prescription Prescription? @relation(fields: [prescriptionId], references: [id])

  patientHistory PatientHistory?
  review         Review?
  notifications  Notification[] @relation("AppointmentNotifications")

  @@index([doctorId, status, date])
  @@index([patientId, date])
  @@index([prescriptionId])
  @@index([status, date])
}

model Prescription {
  id               String   @id @default(uuid())
  doctorId         String
  patientId        String
  dateIssued       DateTime @default(now())
  prescriptionText String

  doctor         Doctor          @relation(fields: [doctorId], references: [id])
  patient        Patient         @relation(fields: [patientId], references: [id])
  patientHistory PatientHistory?
  Appointment    Appointment[]
}

model Symptom {
  id          String @id @default(uuid())
  symptomText String
  patientId   String

  patient Patient @relation(fields: [patientId], references: [id])
}

model PatientHistory {
  id             String   @id @default(uuid())
  doctorId       String
  patientId      String
  appointmentId  String   @unique
  prescriptionId String   @unique
  notes          String
  dateRecorded   DateTime @default(now())

  doctor       Doctor       @relation(fields: [doctorId], references: [id])
  patient      Patient      @relation(fields: [patientId], references: [id])
  appointment  Appointment  @relation(fields: [appointmentId], references: [id])
  prescription Prescription @relation(fields: [prescriptionId], references: [id])
}

model TimeSlot {
  id              String         @id @default(uuid())
  doctorId        String
  startTime       DateTime
  endTime         DateTime
  consultationFee Int?           @default(0)
  status          TimeSlotStatus @default(AVAILABLE)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  doctor      Doctor        @relation(fields: [doctorId], references: [id])
  appointment Appointment[]

  @@unique([doctorId, startTime])
  @@index([doctorId, status, startTime])
  @@index([status, startTime])
}

model BlockedDate {
  id        String    @id @default(uuid())
  doctorId  String
  date      DateTime  
  startTime String?   // HH:mm format (e.g., "13:00")
  endTime   String?   // HH:mm format (e.g., "15:00")
  reason    String?
  isFullDay Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  doctor Doctor @relation(fields: [doctorId], references: [id], onDelete: Cascade)

  @@index([doctorId, date])
  @@index([doctorId])
}

model ChatMessage {
  id          String   @id @default(uuid())
  senderId    String
  receiverId  String?
  roomId      String?
  message     String
  messageType String   @default("TEXT")
  imageUrl    String?
  timestamp   DateTime @default(now())

  sender   User  @relation("SentMessages", fields: [senderId], references: [id])
  receiver User? @relation("ReceivedMessages", fields: [receiverId], references: [id])
  room     Room? @relation("RoomMessages", fields: [roomId], references: [id])

  @@index([senderId, receiverId, timestamp])
  @@index([roomId, timestamp])
}

model Room {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())

  admin    User[]        @relation("RoomAdmin")
  members  User[]        @relation("RoomMembers")
  messages ChatMessage[] @relation("RoomMessages")

  @@index([name])
}

model Report {
  id                 String   @id @default(uuid())
  patientId          String
  filename           String
  fileUrl            String
  extractedText      String?
  summary            String?
  abnormalValues     Json?
  possibleConditions String[]
  recommendation     String?
  disclaimer         String?
  mimeType           String
  fileSize           Int
  status             String   @default("PENDING")
  error              String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  patient Patient @relation(fields: [patientId], references: [id])

  @@index([patientId])
  @@index([status])
  @@index([createdAt])
}

model AiChat {
  id             String   @id @default(uuid())
  userId         String
  userMessage    String
  aiResponse     Json
  probableCauses String[]
  severity       String
  recommendation String
  disclaimer     String
  createdAt      DateTime @default(now())

  user User @relation("UserAiChats", fields: [userId], references: [id])

  @@index([userId, createdAt])
}

model Notification {
  id            String   @id @default(uuid())
  userId        String
  type          String
  title         String
  message       String
  isRead        Boolean  @default(false)
  appointmentId String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user        User         @relation("UserNotifications", fields: [userId], references: [id])
  appointment Appointment? @relation("AppointmentNotifications", fields: [appointmentId], references: [id])

  @@index([userId, isRead])
  @@index([createdAt])
}

model PrescriptionTemplate {
  id               String   @id @default(uuid())
  doctorId         String
  name             String
  description      String?
  prescriptionText String
  isActive         Boolean  @default(true)
  tags             String[] @default([])
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  doctor Doctor @relation(fields: [doctorId], references: [id], onDelete: Cascade)

  @@index([doctorId, isActive])
  @@index([doctorId, createdAt])
}

model PatientHealthMetric {
  id                String     @id @default(cuid())
  patientId         String
  patient           Patient    @relation(fields: [patientId], references: [id], onDelete: Cascade)
  
  // Metric details
  metricType        MetricType
  value             Float
  unit              String
  recordedAt        DateTime   @default(now())
  recordedBy        String?    // Doctor/Staff ID who recorded it
  recordedByUser    User?      @relation(fields: [recordedBy], references: [id])
  
  // Optional fields
  notes             String?
  isAbnormal        Boolean    @default(false)
  
  // Metadata
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  
  @@index([patientId, metricType, recordedAt])
  @@index([patientId, recordedAt])
  @@index([isAbnormal, patientId])
  @@map("patient_health_metrics")
}

model Review {
  id            String      @id @default(uuid())
  appointmentId String      @unique
  patientId     String
  doctorId      String
  rating        Int
  comment       String?
  isAnonymous   Boolean     @default(false)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  appointment Appointment @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
  patient     Patient     @relation(fields: [patientId], references: [id], onDelete: Cascade)
  doctor      Doctor      @relation(fields: [doctorId], references: [id], onDelete: Cascade)

  @@index([doctorId, createdAt])
  @@index([patientId, createdAt])
}